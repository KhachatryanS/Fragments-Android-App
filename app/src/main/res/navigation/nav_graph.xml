<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_diceRollerFragment"
            app:destination="@id/diceRollerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_ticTacToeFragment2"
            app:destination="@id/ticTacToeFragment2" />
        <action
            android:id="@+id/action_mainFragment_to_playerNameFragment"
            app:destination="@id/playerNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/diceRollerFragment"
        android:name="com.example.fragments.DiceRollerFragment"
        android:label="fragment_dice_roller"
        tools:layout="@layout/fragment_dice_roller" />
    <fragment
        android:id="@+id/playerNameFragment"
        android:name="com.example.fragments.PlayerNameFragment"
        android:label="fragment_player_name"
        tools:layout="@layout/fragment_player_name" />
    <fragment
        android:id="@+id/ticTacToeFragment2"
        android:name="com.example.fragments.TicTacToeFragment"
        android:label="fragment_tictactoe"
        tools:layout="@layout/fragment_tictactoe" />
</navigation>